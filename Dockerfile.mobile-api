# Dockerfile for Mobile API
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir flask flask-cors redis anthropic google-generativeai openai

# Copy application files
COPY mobile_api.py .
COPY seraph/ ./seraph/
COPY quantum_lab/ ./quantum_lab/
COPY discoveries/ ./discoveries/

# Expose port
EXPOSE 8000

# Run the API
CMD ["python", "mobile_api.py"]
